<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".WeatherFragment"
    android:background="#EFAFAF"
    android:orientation="vertical"
    android:id="@+id/clWeather">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/locationCard">


    <TextView
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textSize="32sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="---"
        android:textAlignment="center"
        android:textColor="#393939"/>


    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/temp"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:textSize="52sp"
        android:textAlignment="center"
        android:text="--°"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/locationCard"
        android:textColor="#393939"
        android:textStyle="bold" />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/temp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/hightemp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="High: --°"
        android:paddingTop="20dp"
        android:paddingLeft="100dp"
        android:textAlignment="center"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/temp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/lowtemp"
        android:paddingTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Low: --°"
        android:textAlignment="center"
        android:paddingRight="100dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/hightemp"
        android:id="@+id/descriptionCard">

    <ImageView
        android:id="@+id/icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="100dp"
        android:layout_height="100dp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="---"
            app:layout_constraintLeft_toRightOf="@id/icon"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingLeft="150dp"
            android:paddingTop="35dp"/>

    </androidx.cardview.widget.CardView>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/descriptionCard"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/humidity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Humidity" />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/humidity"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/windspeed"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Wind Speed" />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/windspeed"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/pressure"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Rain 1hr" />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/pressure"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/cloudiness"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Cloudiness" />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/cloudiness"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/weatherid"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Code" />


</androidx.constraintlayout.widget.ConstraintLayout>